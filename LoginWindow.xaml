<Window x:Class="HAMS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HAMS"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="登录" Height="200" Width="300">
  <Canvas>
    <TextBlock Canvas.Left="63" Canvas.Top="56" Text="用户名："/>
    <TextBlock Canvas.Left="64" Canvas.Top="87" Text="密   码："/>
    <ComboBox x:Name="CmbUserName" Canvas.Left="113" Canvas.Top="53" Width="120" Height="22" VerticalContentAlignment="Center"/>
    <PasswordBox x:Name="PsdPass" Canvas.Left="113" Canvas.Top="85" Width="120" Height="22" VerticalContentAlignment="Center"/>
    <Button x:Name="BtnLogin" IsDefault="True" Click="BtnLogin_Click" Content="登录" Padding="15,3" Canvas.Left="78" Canvas.Top="123"/>
    <Button x:Name="BtnCancel" IsCancel="True" Click="BtnCancel_Click" Content="取消" Padding="15,3" Canvas.Left="157" Canvas.Top="123"/>
    <TextBlock Canvas.Left="105" Canvas.Top="14" FontSize="22" Text="用户登录"/>
  </Canvas>
</Window>
